<UserControl x:Class="HotelBookingApp.Views.GuestViews.AddGuestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelBookingApp.Views.GuestViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">
    
    
    <Grid Margin="10" HorizontalAlignment="Center" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Page Header -->
        <Border 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource PageHeaderLine}">
            <TextBlock
                Style="{StaticResource PageTitle}"
                HorizontalAlignment="Center"
                Text="Add New Guest"/>
        </Border>

        <!-- text with inputs  -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="First Name"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            MaxLength="30"
            Margin="0,5,0,5"
            Text="{Binding GuestViewModel.FirstName, UpdateSourceTrigger=PropertyChanged}"/>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Last Name"/>
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            MaxLength="30"
            Margin="0,5,0,5"
            Text="{Binding GuestViewModel.LastName, UpdateSourceTrigger=PropertyChanged}"/>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Email"/>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,5,0,5"
            Text="{Binding GuestViewModel.Email, UpdateSourceTrigger=PropertyChanged}"/>

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Content="Phone Number"/>
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            MaxLength="10"
            Margin="0,5,0,5"
            Text="{Binding GuestViewModel.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>


        <!-- The error message textblock -->
        <TextBlock 
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="0,2,0,0"
            Text="{Binding GuestViewModel.ErrorMessage}"
            Foreground="Red"
            TextWrapping="Wrap"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- A button to add a new guest -->
        <Button
            Grid.Row="6"
            Grid.Column="1"
            Style="{StaticResource DefaultButton}"
            Margin="0,5,0,0"
            Content="Add Guest"
            Command="{Binding AddGuestCommand}"/>

    </Grid>
</UserControl>
