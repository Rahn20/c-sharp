<Application x:Class="InvoiceMaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InvoiceMaker"
             xmlns:views="clr-namespace:InvoiceMaker.Views"
             xmlns:vm="clr-namespace:InvoiceMaker.ViewModels">

    <Application.Resources>
        <!-- DataTemplate for HeaderViewModel and InvoiceContentViewModel -->
        <DataTemplate DataType="{x:Type vm:HeaderViewModel}">
            <views:HeaderView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:InvoiceContentViewModel}">
            <views:InvoiceContentView/>
        </DataTemplate>

        <!-- Global Resources -->
        
    </Application.Resources>
</Application>
